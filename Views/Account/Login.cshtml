@model Book_Store.ViewModel.users.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>

<div class="auth-wrapper">
    <div class="auth-side-image">
        <img src="/images/dangnhap1.jpg" alt="Illustration" />
    </div>

    <div class="auth-side-form">
        <div class="form-container">
            <h2 class="auth-title">Đăng nhập</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Login" asp-controller="Account" method="post">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email:</label>
                    <input asp-for="Email" class="form-control" placeholder="example@gmail.com" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Mật khẩu:</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>
                    @* <a href="#" class="text-decoration-none small">Quên mật khẩu?</a> *@
                </div>

                <button type="submit" class="btn btn-primary btn-auth-submit">Đăng nhập</button>
                
                <div class="auth-footer text-center mt-4">
                    <span>Chưa có tài khoản? </span>
                    <a asp-controller="Account" asp-action="Register" class="text-decoration-none fw-bold">Đăng ký ngay</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
</body>
</html>