﻿<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet"href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Book_Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style_layout.css" asp-append-version="true" />
    
</head>
<body>

    <div class="header_nav">
        <!-- Header -->
    <header>
        <div class="header-main">
            <a href="/" class="logo">
                <div class="logo-icon">
                    <i class="fas fa-book"></i>
                </div>
                <span>Nhà Sách Dân Gian</span>
            </a>

            <div class="search-bar">
                <input type="text" placeholder="Bạn muốn mua gì?">
                <button><i class="fas fa-search"></i></button>
            </div>

            <div class="cart-info">
                <i class="fas fa-shopping-cart"></i>
                <span>Giỏ hàng / <span id="cartTotal">0</span> ₫</span>
                <span class="cart-badge" id="cartCount">0</span>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="nav-main">
        <div class="nav-container">
                <div class="category-wrapper">
            <div class="category-menu" onclick="toggleCategoryDropdown(event)">
                <i class="fas fa-bars"></i>
                <span>Danh mục sản phẩm</span>
            </div>

            <div class="category-dropdown" id="categoryDropdown">
                <ul class="category-list">
                    <li><a href="#">Sách kinh doanh</a></li>
                    <li><a href="#">Sách thiếu nhi</a></li>
                    <li><a href="#">Sách tiếng Anh</a></li>
                    <li><a href="#">Sách kỹ năng</a></li>
                    <li><a href="#">Sách khởi nghiệp</a></li>
                    <li><a href="#">Sách nuôi dạy con</a></li>
                    <li><a href="#">Văn phòng phẩm</a></li>
                    <li><a href="#">Sách văn học / truyện</a></li>
                    <li><a href="#">Khuyến mãi</a></li>
                </ul>
            </div>
            </div>

<div class="main-nav">
    <a asp-controller="Home" asp-action="Index">Trang chủ</a>
    <a asp-controller="Home" asp-action="CuaHang">Cửa hàng</a>
    <a asp-controller="Home" asp-action="TinTuc">Tin tức</a>
    <a asp-controller="Home" asp-action="GioiThieu">Giới thiệu</a>
    <a asp-controller="Home" asp-action="LienHe">Liên hệ</a>
</div>

        </div>
    </nav>
    </div>

    
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
 <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>Về chúng tôi</h3>
                <p>Nhà Sách Hải An - Nơi hội tụ tri thức, nơi lan tỏa đam mê đọc sách.</p>
                <div class="social-links">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-tiktok"></i></a>
                </div>
            </div>

            <div class="footer-section">
                <h3>Hỗ trợ khách hàng</h3>
                <ul>
                    <li><a href="#">Chính sách đổi trả</a></li>
                    <li><a href="#">Chính sách bảo mật</a></li>
                    <li><a href="#">Phương thức thanh toán</a></li>
                    <li><a href="#">Hướng dẫn mua hàng</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h3>Danh mục sản phẩm</h3>
                <ul>
                    <li><a href="#">Sách kinh doanh</a></li>
                    <li><a href="#">Sách thiếu nhi</a></li>
                    <li><a href="#">Sách kỹ năng</a></li>
                    <li><a href="#">Văn học - Tiểu thuyết</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h3>Liên hệ</h3>
                <ul>
                    <li><i class="fas fa-map-marker-alt"></i> 23 Đường Nguyễn Trãi, Q1, TP.HCM</li>
                    <li><i class="fas fa-phone"></i> 1900 6534</li>
                    <li><i class="fas fa-envelope"></i> contact@nhasachdangian.com</li>
                    <li><i class="fas fa-clock"></i> 8:00 - 22:00 (Thứ 2 - Chủ nhật)</li>
                </ul>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
