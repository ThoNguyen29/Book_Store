﻿<!DOCTYPE html>
<html lang="en">
<head>
    @* CSS *@
    @* HeaderCSS *@
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    @* CategoriesCSS *@
    <link rel="stylesheet" href="~/css/categories.css" asp-append-version="true" />
    @* --- *@
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Book_Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style_layout.css" asp-append-version="true" />
</head>
<body>
    <header class="site-header">
    <div class="container header-main">
        
        <a href="/" class="logo-wrapper">
            <img src="~/images/logo.png" alt="Nhà Sách Hải An" class="logo-img">
        </a>

        <div class="search-wrapper">
            <form action="/Search" method="get" class="search-box">
                <input type="text" name="q" placeholder="Bạn muốn tìm sách gì?">
                <button type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>

        <div class="actions-wrapper">
            
            <div class="auth-section">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="dropdown">
                        <a href="#" class="user-name dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle"></i> @User.Identity?.Name
                        </a>
                        <ul class="dropdown-menu">
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Quản trị</a></li>
                            }
                            <li><a class="dropdown-item" href="/Order/History">Đơn hàng</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="dropdown-item text-danger">Đăng xuất</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="guest-links">
                        <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
                        <span class="divider">|</span>
                        <a asp-controller="Account" asp-action="Register">Đăng ký</a>
                    </div>
                }
            </div>

            <a href="/Cart" class="cart-icon-wrapper">
    <i class="fas fa-shopping-cart"></i>
    <span class="cart-badge" id="cartCount">0</span>
</a>

        </div>
    </div>
</header>

        <nav class="nav-main">
    <div class="container nav-container">
        
        <div class="category-wrapper">
            <div class="category-menu" onclick="toggleCategoryDropdown(event)">
                <i class="fas fa-bars"></i>
                <span>DANH MỤC SẢN PHẨM</span>
            </div>

            <div class="category-dropdown" id="categoryDropdown">
                <ul class="category-list">
    <li><a href="#">Sách kinh doanh</a></li>
    <li><a href="#">Sách thiếu nhi</a></li>
    <li><a href="#">Sách tiếng Anh</a></li>
    <li><a href="#">Sách kỹ năng</a></li>
    
</ul>
            </div>
        </div>

        <div class="main-nav-links">
            <a href="/" class="nav-link active">Trang chủ</a>
            <a href="/cua-hang" class="nav-link">Cửa hàng</a>
            <a asp-controller="Home" asp-action="About" class="nav-link">Giới thiệu</a>
        </div>
    </div>
</nav>

               


    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Book_Store - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
