@model Book_Store.Models.Category

@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    ViewData["Title"] = "Thêm danh mục";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-forms.css" asp-append-version="true" />
}

<div class="admin-page">

    <div class="page-header">
        <h1 class="page-title">Thêm danh mục</h1>
        <a class="btn btn-ghost" asp-action="Index">Quay lại</a>
    </div>

    <div class="card">
        <div class="card-body">

            <form class="form" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="field">
                    <div class="label">Tên danh mục</div>
                    <input class="input" asp-for="Name" placeholder="VD: Sách kinh doanh" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="field">
                    <div class="label">Slug</div>
                    <input class="input" asp-for="Slug" placeholder="VD: sach-kinh-doanh" />
                    <div class="hint">Có thể để trống nếu chưa dùng SEO.</div>
                    <span asp-validation-for="Slug" class="text-danger"></span>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a class="btn btn-ghost" asp-action="Index">Hủy</a>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}